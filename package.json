{
  "name": "@elattariyassine/envcheck",
  "version": "1.0.0",
  "description": "A CLI tool to validate environment variables",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "bin": {
    "envcheck": "./lib/bin/envcheck.js"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json && chmod +x lib/bin/envcheck.js",
    "test": "jest",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepare": "npm run build"
  },
  "keywords": [
    "cli",
    "env",
    "validation",
    "typescript",
    "environment-variables",
    "dotenv",
    "configuration"
  ],
  "author": {
    "name": "Yassine El attari",
    "email": "yassineattari64@gmail.com",
    "url": "https://github.com/elattariyassine"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/elattariyassine/envcheck.git"
  },
  "bugs": {
    "url": "https://github.com/elattariyassine/envcheck/issues"
  },
  "homepage": "https://github.com/elattariyassine/envcheck#readme",
  "license": "ISC",
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "fs-extra": "^11.2.0",
    "inquirer": "^8.2.6"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^8.2.6",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.19",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "<rootDir>/src/**/*.test.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "node"
    ]
  }
}
