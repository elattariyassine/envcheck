{
  "name": "@elattariyassine/envcheck",
  "version": "1.0.0",
  "description": "A powerful Node.js CLI tool for validating, managing, and fixing environment variables",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "bin": {
    "envcheck": "./lib/bin/envcheck.js"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json && chmod +x lib/bin/envcheck.js",
    "test": "jest",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepare": "npm run build"
  },
  "keywords": [
    "env",
    "environment",
    "variables",
    "validation",
    "cli",
    "dotenv",
    "check",
    "validate"
  ],
  "author": "Yassine Elattari",
  "license": "MIT",
  "dependencies": {
    "ajv": "^8.12.0",
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "dotenv": "^16.4.5",
    "fs-extra": "^11.2.0",
    "inquirer": "^8.2.6"
  },
  "devDependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^8.2.6",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.24",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/elattariyassine/envcheck.git"
  },
  "bugs": {
    "url": "https://github.com/elattariyassine/envcheck/issues"
  },
  "homepage": "https://github.com/elattariyassine/envcheck#readme"
}
